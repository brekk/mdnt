---
import blem from 'blem'
const bem = blem('Template')
import '#/components/Template.scss'
---

<section
  id="template"
  class={bem('')}
>

  <h2
    class={bem('title', 'uncontrolled')}
    contentEditable="plaintext-only"
  >
    Dear Dad
  </h2>
  <div class={bem('form')}>
    <textarea class={bem('body', 'uncontrolled')} />
    <div class={bem('control-panel', 'primary')}>

      <button type="submit" class={bem('button', 'save')}>Get a URL to share</button>
    </div>
  </div>
  <aside class={bem('meta', 'description')}>
    <strong class={bem('info', 'primary')}>
      An editable (and printable) (and hopefully useful) template
    </strong>

    <span class={bem('info', 'secondary')}>
      You can print to a PDF too!
    </span>
  </aside>
</section>

<!-- script src="../vendor/spinneret.js" /-->
<script src="#/browser/helpers.js" />
<script src="#/browser/template.js" />
